-- Create ScreenGui
local gui = Instance.new("ScreenGui")
gui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

-- Create Frame (black background)
local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 200, 0, 250)
frame.Position = UDim2.new(0.5, -100, 0.5, -125)
frame.BackgroundColor3 = Color3.fromRGB(0, 0, 0) -- black
frame.BorderSizePixel = 2
frame.BorderColor3 = Color3.fromRGB(255, 0, 0) -- red border
frame.Parent = gui

-- Loading label (red text)
local loadingLabel = Instance.new("TextLabel")
loadingLabel.Size = UDim2.new(0, 180, 0, 40)
loadingLabel.Position = UDim2.new(0, 10, 0, 210)
loadingLabel.Text = ""
loadingLabel.BackgroundTransparency = 1
loadingLabel.TextColor3 = Color3.fromRGB(255, 0, 0) -- red
loadingLabel.TextScaled = true
loadingLabel.Parent = frame

-- Function to animate loading text
local function playLoadingAnimation()
    local dots = 0
    loadingLabel.Text = "Loading"
    local running = true
    task.spawn(function()
        while running do
            dots = (dots + 1) % 4
            loadingLabel.Text = "Loading" .. string.rep(".", dots)
            task.wait(0.5)
        end
    end)
    return function() running = false loadingLabel.Text = "" end
end

-- Function to create buttons (red theme)
local function createButton(name, position, url)
    local button = Instance.new("TextButton")
    button.Size = UDim2.new(0, 180, 0, 40)
    button.Position = UDim2.new(0, 10, 0, position)
    button.Text = name
    button.BackgroundColor3 = Color3.fromRGB(150, 0, 0) -- dark red
    button.TextColor3 = Color3.fromRGB(255, 255, 255) -- white text
    button.Parent = frame

    -- Hover effect: brighten red
    button.MouseEnter:Connect(function()
        button.BackgroundColor3 = Color3.fromRGB(255, 0, 0)
    end)
    button.MouseLeave:Connect(function()
        button.BackgroundColor3 = Color3.fromRGB(150, 0, 0)
    end)

    button.MouseButton1Click:Connect(function()
        local stopAnimation = playLoadingAnimation()
        local success, response = pcall(function()
            return game:HttpGet(url)
        end)
        stopAnimation()
        if success then
            loadstring(response)()
        else
            warn("Failed to load from: " .. url)
        end
    end)
end

-- Add 4 buttons with GitHub raw file URLs
createButton("Button 1", 10, "https://raw.githubusercontent.com/username/repo/main/file1.lua")
createButton("Button 2", 60, "https://raw.githubusercontent.com/username/repo/main/file2.lua")
createButton("Button 3", 110, "https://raw.githubusercontent.com/username/repo/main/file3.lua")
createButton("Button 4", 160, "https://raw.githubusercontent.com/username/repo/main/file4.lua")
